PORT=5000
NODE_ENV=production

# Supabase primary connection (choose ONE of the first two)
# Use the pooled prisma URL (recommended for serverless) OR standard pooled URL
DATABASE_URL=postgresql://USER:PASSWORD@HOST:6543/DB?sslmode=require

# (Optional fallback pieces - usually omit when DATABASE_URL is set)
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_DATABASE=
POSTGRES_PORT=6543

# Logging
DB_LOGGING=false

# JWT secret for your own auth (can reuse SUPABASE_JWT_SECRET or separate)
JWT_SECRET=change_me

# Supabase keys (server only, DO NOT expose service role)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Optional external storage / uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
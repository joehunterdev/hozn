# Backend Environment Variables for Vercel / Supabase
PORT=5000

# Primary connection string (Supabase provides this)
# Format example:
# postgresql://postgres.your_user:your_password@aws-xyz-abc.supabase.co:6543/postgres?sslmode=require
DATABASE_URL=

# Optional granular config if not using DATABASE_URL
DB_HOST=
DB_PORT=5432
DB_NAME=
DB_USER=
DB_PASSWORD=

# Force SSL (Supabase requires SSL)
DB_SSL=true

# Enable SQL logging (set to true only for debugging)
DB_LOGGING=false

JWT_SECRET=your_super_secure_jwt_secret_key_here
NODE_ENV=production

# Optional: For file uploads
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
